{
  "name": "crucible-dash",
  "productName": "CrucibleDashboard",
  "version": "0.1.0",
  "description": "Crucible Dashboard built with Electron",
  "main": "src/js/app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --color",
    "build": "rimraf CrucibleDashboard-* && electron-packager . --platform=win32,darwin,linux --arch=x64 --icon=app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InViN/crucible-dashboard.git"
  },
  "keywords": [
    "atlassian",
    "jira",
    "crucible",
    "electron"
  ],
  "author": {
    "name": "Neil Pathare",
    "email": "neil.pathare@outlook.com",
    "url": "https://github.com/InViN"
  },
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel",
          "zip"
        ],
        "darwin": [
          "dmg",
          "zip"
        ],
        "linux": [
          "deb",
          "rpm",
          "zip"
        ]
      },
      "publish_targets": {
        "win32": [
          "github"
        ],
        "darwin": [
          "github"
        ],
        "linux": [
          "github"
        ]
      },
      "electronPackagerConfig": {
        "icon": "resources/icons/app",
        "executableName": "CrucibleDashboard",
        "appCopyright": "Copyright Â© CrucibleDashboard, Licensed under the Apache License, Version 2.0",
        "win32metadata": {
          "ProductName": "CrucibleDashboard",
          "CompanyName": "CrucibleDashboard"
        }
      },
      "electronWinstallerConfig": {
        "name": "CrucibleDashboard",
        "setupIcon": "resources/icons/app.ico",
        "loadingGif": "",
        "setupExe": "CrucibleDashSetup.exe"
      },
      "electronInstallerDebian": {
        "icon": "resources/icons/app",
        "categories": [
          "Utility"
        ],
        "homepage": "https://github.com/InViN/crucible-dashboard"
      },
      "electronInstallerRedhat": {
        "license": "Apache-2.0",
        "requires": [
          "lsb",
          "libappindictor"
        ],
        "compressionLevel": 9,
        "categories": [
          "Utility"
        ]
      },
      "github_repository": {
        "owner": "InViN",
        "name": "https://github.com/InViN/crucible-dashboard",
        "draft": false,
        "prerelease": true
      },
      "windowsStoreConfig": {
        "packageName": "CrucibleDashboard",
        "name": "CrucibleDashboard"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/InViN/crucible-dashboard/issues"
  },
  "homepage": "https://github.com/InViN/crucible-dashboard#readme",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "electron": "2.0.0",
    "electron-forge": "^5.2.2",
    "electron-packager": "^12.0.2",
    "electron-prebuilt-compile": "2.0.0",
    "eslint": "^3",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "bootstrap": "^4.1.1",
    "chart.js": "^2.7.2",
    "electron-compile": "^6.4.2",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.3.1",
    "jsgrid": "^1.5.3",
    "nedb": "^1.8.0",
    "popper.js": "^1.14.3",
    "request": "^2.85.0",
    "request-promise": "^4.2.2"
  }
}